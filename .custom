## START CUSTOM ALIASES
alias c='clear'
alias cc='cd && clear'
alias e='exit'
alias i='whoami'
alias l='ls -laht'
alias lh='ls -laht | head'
alias lt='ls -laht | tail'
alias lssh='ls -laht ~/.ssh/ | grep id_'
alias p='git pull'
alias s='sudo su -'
alias t='tmux new'
alias tk='tmux kill-server'
alias tls='tmux ls'

alias cm='docker compose up -d'
alias dps='docker ps'
alias dpsa='docker ps -a'
alias dnls='docker network ls'
alias dvls='docker volume ls'

alias ssha='eval "$(ssh-agent -s)" && find ~/.ssh/ -type f -maxdepth 2 -exec grep -l "PRIVATE" {} \; | xargs ssh-add &> /dev/null'
alias sshall='eval "$(ssh-agent -s)" && find ~/.ssh/ -type f -exec grep -l "PRIVATE" {} \; | xargs ssh-add &> /dev/null'
alias ssharm='ssh-agent -k && killall ssh-agent'
alias sshc='nano ~/.ssh/config'

alias mount='mount | column -t'
alias now='date +"%T"'

alias ans='cd /etc/ansible/ && clear'
alias ansdbg1='export ANSIBLE_DEBUG=1'
alias ansdbg0='export ANSIBLE_DEBUG=0'

alias word='curl -s https://godsays.xyz/ | xargs -n3'

alias getip='curl https://ifconfig.me/ && echo'
alias getip6='curl https://ipv6.icanhazip.com/ && echo'

alias reload='source ~/.bashrc && clear'
alias net='ss -tulpn'
alias u='sudo apt update'
alias uu='sudo apt update && sudo apt upgrade -y'
## END CUSTOM ALIASES
